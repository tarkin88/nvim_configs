{
  "suggest.enablePreview": true,
  "suggest.timeout": 800,
  "suggest.floatEnable": true,
  "diagnostic.enableSign": true,
  "diagnostic.format": "[%severity] %message [%source%code] ",
  "diagnostic.errorSign": "✗ ",
  "diagnostic.warningSign": "▲ ",
  "diagnostic.infoSign": " ",
  "diagnostic.hintSign": " ",
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.virtualText": false,
  "list.indicator": ">",
  "list.selectedSignText": " ",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "elixir",
    "graphql",
    "html",
    "javascript",
    "json",
    "markdown",
    "typescript",
    "typescriptreact",
    "yaml",
    "vue",
    "vim"
  ],
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/.config/nvim/snippets"
  ],
  "coc.source.around.enable": true,
  "git.addGBlameToVirtualText": false,
  "git.showCommitInFloating": false,
  "git.addGBlameToBufferVar": true,
  "git.addedSign.text": "▎",
  "git.changedSign.text": "▎",
  "git.topRemovedSign.text": "契",
  "git.removedSign.text": "契",
  "list.source.tags.command": "ctags -R .",
  "pyright.organizeimports.provider": "isort",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "-S",
    "--line-length=120"
  ],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,
  "git.enableGutters": true
}
